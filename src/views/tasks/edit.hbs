<div class="block mx-auto my-12 p-8 bg-white w-1/3 boder boder-gray-200 rounded-lg shadow-lg">
    <h1 class="text-center text-3xl font-bold">Edit Tasks</h1>
    {{#each tasks }}
    <form action="" method="POST" class="mt-4">
        <input type="text" class="border boder-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="Task Title" name="title" value="{{title}}">

        <textarea class="border boder-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white h-40" placeholder="Tasks Description" name="description" value="{{description}}"></textarea>

        <button type="submit" class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700">Send</button>
    </form>
    {{/each}}
</div>